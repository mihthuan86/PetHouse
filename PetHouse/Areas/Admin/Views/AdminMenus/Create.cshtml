@model PetHouse.Models.Menu

@{
    ViewData["Title"] = "Tạo danh mục bài viết mới";
}
<div class="row">
	<div class="col-md-12">
		<div class="tile">
			<h3 class="tile-title">Tạo danh mục mới</h3>
			<div class="tile-body">
				<form asp-action="Create" class="row" enctype="multipart/form-data">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group col-md-5">
						<label asp-for="Name" class="control-label">Tên danh mục bài viết</label>
						<input asp-for="Name" class="form-control" type="text">
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>	
					<div style="height:70px; margin-top:30px">

					<button class="btn btn-save mr-1" type="submit" >Lưu lại</button>
					<a class="btn btn-cancel" asp-action="Index">Hủy bỏ</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

