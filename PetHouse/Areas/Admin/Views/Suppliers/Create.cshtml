@model PetHouse.Models.Supplier

@{
	ViewData["Title"] = "Tạo nhà cung cấp mới";
}
<div class="row">
	<div class="col-md-12">
		<div class="tile">
			<h3 class="tile-title">Tạo phiếu nhập hàng</h3>
			<div class="tile-body">
				<form asp-action="Create" class="row" enctype="multipart/form-data">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group col-md-5">
						<label asp-for="Name" class="control-label">Tên nhà cung cấp</label>
						<input asp-for="Name" class="form-control" type="text">
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="form-group col-md-5">
						<label asp-for="Address" class="control-label">Địa chỉ</label>
						<input asp-for="Address" class="form-control" type="text">
						<span asp-validation-for="Address" class="text-danger"></span>
					</div>
					<div class="form-group col-md-5">
						<label asp-for="PhoneNumber" class="control-label">Số điện thoại</label>
						<input asp-for="PhoneNumber" class="form-control" type="text">
						<span asp-validation-for="PhoneNumber" class="text-danger"></span>
					</div>
					<div class="form-group col-md-5">
						<label asp-for="Email" class="control-label">Email</label>
						<input asp-for="Email" class="form-control" type="text">
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<button class="btn btn-save ml-3 mr-3" type="submit">Lưu lại</button>
					<a class="btn btn-cancel" asp-action="Index">Hủy bỏ</a>
				</form>
			</div>
		</div>
	</div>
</div>
