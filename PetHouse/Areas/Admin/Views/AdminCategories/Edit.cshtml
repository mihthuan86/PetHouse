@model PetHouse.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
	<div class="col-md-12">
		<div class="tile">
			<h3 class="tile-title">Chỉnh sửa Danh mục</h3>
			<div class="tile-body">
				<form asp-action="Create" class="row" enctype="multipart/form-data">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input asp-for="Id" hidden/>
					<div class="form-group col-md-5">
						<label asp-for="Name" class="control-label">Tên Danh mục</label>
						<input asp-for="Name" class="form-control" type="text">
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="form-group col-md-2">
						<br />
						<br />
						<label class="form-check-label ml-3">
							<input class="form-check-input" asp-for="isParent" /> <p class="fw-bold">Danh mục cha</p>
						</label>
					</div>
					<div class="form-group col-md-3 ">
						<label asp-for="ParentId" class="control-label">Danh mục cha</label>
						<select asp-for="ParentId" class="form-control" asp-items="ViewBag.PCategory"></select>
						<span asp-validation-for="ParentId" class="text-danger"></span>
					</div>
					<div class="form-group col-md-12">
						<label class="control-label">Mô tả sản phẩm</label>
						<textarea asp-for="Description" class="form-control" required></textarea>
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
					<button class="btn btn-save ml-3 mr-3" type="submit">Lưu lại</button>
					<a class="btn btn-cancel" asp-action="Index">Hủy bỏ</a>
				</form>
			</div>
		</div>
	</div>
</div>

