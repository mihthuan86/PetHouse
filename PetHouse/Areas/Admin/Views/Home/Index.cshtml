                <h4>Tổng đơn hàng</h4>
                <p><b>@ViewBag.countOrder đơn hàng</b></p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-lg-4">
        <div class="widget-small danger coloured-icon">
            <i class="icon fa-3x bx bxs-receipt"></i>
            <div class="info">
                <h4>Đơn hàng hủy</h4>
                <p><b>@ViewBag.countOrderCancel đơn hàng</b></p>
