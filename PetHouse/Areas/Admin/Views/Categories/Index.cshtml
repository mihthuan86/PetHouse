@model IEnumerable<PetHouse.Models.Category>

@{
	ViewData["Title"] = "Quản lý danh mục";
}
<div class="row">
	<div class="col-md-12">
		<div class="tile">
			<div class="tile-body">

				<div class="row element-button">
					<div class="col-sm-2">

						<a class="btn btn-add btn-sm" asp-action="Create" title="Thêm">
							<i class="fas fa-plus"></i>
							Tạo danh mục mới
						</a>
					</div>
				</div>
				<table class="table table-hover table-bordered js-copytextarea" cellpadding="0" cellspacing="0" border="0"
					   id="sampleTable">
					<thead>
						<tr>

							<th>ID</th>
							<th width="">Tên danh mục</th>

							<th width="130px">Danh mục cha</th>
							<th width="">Ngày tạo</th>
							<th width="">Ngày sửa</th>
							<th width="100px">Trạng thái</th>
							<th width="">Tính năng</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Id</td>
								<td>@item.Name</td>

								@if (item.isParent)
								{
									<td>Không</td>
								}
								else
								{
									<td>@item.ParentId</td>
								}
								<td>@item.CreateDate</td>
								<td>@item.UpdateDate</td>

								@{
									if (item.isDelete)
									{
										<td>Block</td>
									}
									else
									{
										<td>Active</td>
									}
								}
								<td class="table-td-center">
									<a asp-route-id="@item.Id" asp-action="Delete" class="btn btn-primary btn-sm trash" title="Xóa">
										<i class="fas fa-trash-alt"></i>
									</a>
									<a asp-route-id="@item.Id" asp-action="Edit" class="btn btn-primary btn-sm edit" title="Sửa">
										<i class="fas fa-edit"></i>
									</a>
									<a asp-route-id="@item.Id" asp-action="Details" class="btn btn-primary btn-sm edit" title="Chi tiết">
										<i class="fas fa-edit"></i>
									</a>
								</td>
							</tr>
						}

					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
