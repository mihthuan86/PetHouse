@model PetHouse.ViewModel.MuaHangVM;
@{
	ViewData["Title"] = "Thanh Toan";
	List<PetHouse.ViewModel.CartItem> Carts = ViewBag.GioHang;
}

<div>
	<!-- START MAIN CONTENT -->
	<div class="main_content">

		<!-- START SECTION SHOP -->
		<div class="section" style="margin-top:-50px">
			<div class="container">
				<div class="row">
					<div class="col-12">
						<div class="medium_divider"></div>
						<div class="divider center_icon"><i class="linearicons-credit-card"></i></div>
						<div class="medium_divider"></div>
					</div>
				</div>
				<div class="row" style="margin-top:-50px">
					<div class="col-md-12">
						<div class="heading_s1">
							<h4>Thông tin người nhận</h4>
						</div>
						<form class="row" asp-controller="Checkout" asp-action="Index" method="post">
							<input hidden asp-for="CustomerId" value="@Model.CustomerId" />
							<div class="col-md-7">
								<div class="form-group">
									<input asp-for="FullName" required class="form-control" type="text" placeholder="Họ và tên *">
								</div>
								<div class="form-group">
									<input asp-for="Address" class="form-control" required type="text" placeholder="Địa chỉ *">
								</div>
								<div class="form-group">
									<input asp-for="Phone" class="form-control" required type="text" placeholder="Số điện thoại *">
								</div>
								<div class="form-group">
									<input asp-for="Email" class="form-control" required type="email" placeholder="Địa chỉ Email *">
								</div>
								<div class="form-group">
									<input asp-for="Note" class="form-control" placeholder="Ghi chú *">
								</div>

							</div>
							<div class="col-md-5">
								<div class="payment_method" style="margin-left:50px">
									<div class="heading_s1" style="margin-top:-50px">
										<h4>Phương thức thanh toán</h4>
									</div>
									<div class="payment_option">
										<div class="custome-radio">
											<input asp-for="PaymentID" type="radio" value="1" id="paymentOption1" checked />
											<label asp-for="PaymentID" for="paymentOption1">Thanh toán khi nhận hàng</label>
											<p data-method="option1" class="payment-text">(Thanh toán khi bạn nhận được hàng)</p>
										</div>
										<div class="custome-radio">
											<input asp-for="PaymentID" type="radio" value="2" id="paymentOption2" />
											<label asp-for="PaymentID" for="paymentOption2">Paypal</label>
											<p data-method="option2" class="payment-text">Thanh toán qua ví Paypal</p>
										</div>
									</div>
								</div>
								<div id="submitBtn" style="margin-left:50px">
									<button class="btn btn-fill-out btn-addtocart" type="submit">XÁC NHẬN ĐẶT HÀNG</button>
								</div>
							</div>
						</form>
					</div>
				</div>
