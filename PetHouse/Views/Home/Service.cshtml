@{
    ViewData["Title"] = "Service";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>dichvu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
</head>
<body style="margin-top: 200px">
    <div class="body">
        <div class="dichvu d-flex"
             style="padding-right: 100px; padding-left: 50px">
            <img src="../images/maysay.png"
                 alt=""
                 style="width: 450px; height: 450px; margin-left: -50px" />
            <img src="https://petmania.vamtam.com/wp-content/uploads/2022/07/iStock-1377867397.png"
                 alt=""
                 style="
              width: 500px;
              height: 500px;
              margin-left: 0;
              margin-top: 100px;
            " />
            <div style="margin-top: 300px; margin-left: 50px">
                <h3 style="font-weight: 700">Get your groom on!</h3>
                <p>
                    We offer professional grooming services for both dogs and cats!
                    stop by the store or call us to book your appointment.
                </p>
                <br />
                <button class="btn5-hover btn5">Book an appointment</button>
            </div>
        </div>
        <div class="dichvu2 text-center">
            <img src="../images/service.png"
                 alt=""
                 style="margin-left: 100px; height: 200px" />
            <div class="cards d-flex">
                <div class="card1" style="width: 15rem">
                    <img src="../images/anh1.png" class="card-img-top" alt="..." />
                    <div class="card-body">
                        <p class="card-text">Groming</p>
                    </div>
                </div>
                <div class="card1" style="width: 15rem">
                    <img src="../images/anh2.png" class="card-img-top" alt="..." />
                    <div class="card-body">
                        <p class="card-text">Training</p>
                    </div>
                </div>
                <div class="card1" style="width: 15rem">
                    <img src="../images/anh3.png" class="card-img-top" alt="..." />
                    <div class="card-body">
                        <p class="card-text">Verterinary Care</p>
                    </div>
                </div>
                <div class="card1" style="width: 15rem">
                    <img src="../images/anh4.png" class="card-img-top" alt="..." />
                    <div class="card-body">
                        <p class="card-text">Boarding</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="dichvu3">
            <div class="text-center">
                <img src="../images/cho2.png"
                     alt=""
                     style="width: 370px; height: 250px; margin-top: 70px" />
            </div>
            <div class="d-flex justify-content-around"
                 style="
              background-color: #ffd100;
              width: 90%;
              margin-left: 5%;
              margin-top: -15px;
              padding: 50px 100px 0 100px;
              border-radius: 20px;
            ">
                <h1>Haircut + Bath for your Pet</h1>
                <img src="../images/foot.png"
                     alt=""
                     style="
                width: 150px;
                height: 100px;
                margin-top: 100px;
                margin-left: 20px;
              " />
                <div style="margin-left: 10%">
                    <h6>
                        Order a haircut + bath service package for your pet and get 50%
                        off for your next order.
                    </h6>
                    <br />
                    <i><button class="btn5-hover btn5">Book Now</button></i>
                </div>
            </div>
            <img src="../images/muiten.png"
                 alt=""
                 style="
              width: 170px;
              height: 150px;
              margin-left: 70%;
              margin-top: -80px;
            " />
        </div>
    </div>
</body>
</html>
