@model List<PetHouse.ViewModel.CartItem>
@if (Model != null && Model.Count() > 0)
{
	<div class="giohang m-md-3 d-flex" onclick="toCart()">
		<i class="bi bi-cart" style="color: white; font-size: 35px"> </i>
		<!-- Số lượng sau khi thêm sp vào giỏ hàng -->
		<span class="Badge">
			@Model.Count()
			<span class="u-hiddenVisually"></span>
		</span>

	</div>
}
else
{
	<div class="giohang m-md-3 d-flex " onclick="toCart()">

		<i class="bi bi-cart cursor-pointer" style="color: white; font-size: 35px"> </i>
		<!-- Số lượng sau khi thêm sp vào giỏ hàng -->
		<span class="Badge">
			0
			<span class="u-hiddenVisually"></span>
		</span>

	</div>
}
<style>
.giohang:hover{
	cursor:pointer;
	transform:scale(1.2);
	transition:200ms;
}
</style>
<script>
	function toCart() {
		
			var url = '@Url.Action("Index", "ShoppingCart",new{area = ""})';
			window.location.href = url;
		
	}
</script>
