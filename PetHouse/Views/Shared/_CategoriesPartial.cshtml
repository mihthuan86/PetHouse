@model List<Category>

<div class="">
	<ul class="danhmuc">
		<li>
			<span class="tt"><i class="bi bi-list"></i> DANH MỤC SẢN PHẨM</span>

			<ul>
				@foreach (var item in Model)
				{
					if (item.isParent)
					{
						<li>
							<a asp-area="" asp-controller="Products" asp-action="List" asp-route-cateId="@item.Id">@item.Name</a>
							<ul>
								@foreach (var items in Model)
								{
									if (items.ParentId == item.Id)
									{
										<li><a asp-area="" asp-controller="Products" asp-action="List" asp-route-cateId="@items.Id">@items.Name</a></li>
									}
								}
							</ul>
						</li>
					}
				}
			</ul>
		</li>
	</ul>
</div>
