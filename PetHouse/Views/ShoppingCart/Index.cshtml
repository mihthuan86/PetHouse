	<script src="~/owlcarousel/js/owl.carousel.min.js"></script>
	<!-- magnific-popup min js  -->
	<script src="~/js/magnific-popup.min.js"></script>
	<!-- waypoints min js  -->
	<script src="~/js/waypoints.min.js"></script>
	<!-- parallax js  -->
