	<!-- slick js -->
	<script src="~/js/slick.min.js"></script>
	<!-- elevatezoom js -->
	<script src="~/js/jquery.elevatezoom.js"></script>
	<!-- scripts js -->
	<script src="~/js/scripts.js"></script>
	<script src="~/js/Cart.js"></script>
	}

